<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ThemeFullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">16dp</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <!--inherit-->
    <style name="EditTextStyle.FontFace">
        <item name="android:fontFamily">@font/bungee_inline</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat.Large">
        <item name="android:fontFamily">@font/bungee_inline</item>

    </style>

</resources>
